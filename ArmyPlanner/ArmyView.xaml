<UserControl x:Class="ArmyPlanner.ArmyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArmyPlanner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- army column -->
            <ColumnDefinition Width="4*"/>
            <!-- army modifications column -->
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" 
                                   FontSize="20" 
                                   Margin="5"
                                   Text="{Binding Title}"/>
            <DataGrid Grid.Row="1"
                                  Margin="5, 0, 5, 5"
                                  ItemsSource="{Binding CurrentArmy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                  CanUserResizeColumns="False"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectedIndex="{Binding SelectedArmyIndex, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                  CanUserSortColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                                    Width="*"
                                                    Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Points Cost"
                                                    Width="80"
                                                    Binding="{Binding PointsCost}"/>
                    <DataGridTemplateColumn Width="25">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Width="25"
                                                    Height="25"
                                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.RemoveFromArmyCommand}">
                                    X
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <TextBox Grid.Row="1"
                                 Margin="5"/>
            <DataGrid Grid.Row="2"
                                  Grid.ColumnSpan="2"
                                  Margin="5"
                                  ItemsSource="{Binding AvailableArmyUnits, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                  CanUserResizeColumns="False"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectedIndex="{Binding SelectedAllUnitsIndex, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                  CanUserSortColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Width="*"
                                        Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Points Cost"
                                        Width="80"
                                        Binding="{Binding PointsCost}"/>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.AddToArmyCommand}">
                                    +
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Grid.Row="4"
                                   Text="{Binding PointsTotal, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
        </Grid>
    </Grid>
</UserControl>
